{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2016", "es2017.object", "es2017.string", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
